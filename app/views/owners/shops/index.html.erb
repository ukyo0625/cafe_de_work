
<div class="container">
	<div class="row">
		<div class="col-xs-6">
		    <h3><%= current_owner.name %>さんの投稿したカフェ一覧</h3>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-10 col-xs-offset-1">
			<table class="table">
				<thead>
		       		<tr>
					    <th class="image">イメージ画像</th>
					    <th class="shop_title">ショップ名/詳細</th>
					    <th class="on_off">有効・無効</th>
		    		</tr>
			  	</thead>
			  	<tbody>
					<% if @shops.present? %> 
						<% @shops.each do |shop| %>
					 	    <tr>
					 	    	<td><%= attachment_image_tag shop, :shop_image,:fill,50,50 , format: 'jpeg', fallback: "no_image.jpg" , class:"shop_index_img" %>
					            </td>
					            <td>
					            	<h4><%= link_to shop.shop_name , owners_shop_path(shop.id)  %>
					            	</h4>
					            	<p><%= shop.shop_detail %>
					            	</p>
					            </td>
					            <% if shop.is_active == true %>
							    <td><h4 class="text-center">有効</h4></td>
						　　　　 <% elsif shop.is_active == false %>
							    <td><h4 class="text-center">無効</h4></td>
						        <% end %>
					        </tr>
						<% end %>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>